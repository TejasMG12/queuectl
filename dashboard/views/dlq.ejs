<h2 class="text-xl font-bold mb-4">Dead Letter Queue</h2>

<table class="w-full bg-gray-800 text-gray-200 rounded overflow-hidden">
  <tr class="bg-gray-700">
    <th class="p-2 text-left">ID</th>
    <th class="p-2 text-left">Command</th>
    <th class="p-2 text-left">Reason</th>
    <th class="p-2 text-left">Actions</th>
  </tr>

  <% jobs.forEach(job => { %>
    <tr>
      <td class="p-2"><%= job.id %></td>
      <td class="p-2"><%= job.command %></td>
      <td class="p-2"><%= job.reason %></td>
      <td class="p-2">
        <form action="/dlq/retry/<%= job.id %>" method="POST">
          <button class="bg-blue-600 px-3 py-1 rounded">Retry</button>
        </form>
      </td>
    </tr>
  <% }) %>
</table>
